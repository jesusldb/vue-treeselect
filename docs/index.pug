      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-108169693-1');
    link(rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600|Dosis:300,500")
  body
    #app
      header.site-header
        div#header.container
          div.site-header-logo
            a.site-header-logo-link(href="/vue-treeselect")
              | Vue
              span.site-header-logo-component-name Treeselect
          nav.site-header-nav
            a.site-header-nav-item(href="https://github.com/riophae/vue-treeselect/releases")
              =`v${require('../package.json').version}`
            a.site-header-nav-item(href="https://github.com/riophae/vue-treeselect")
              img.list-img(src="https://img.shields.io/github/stars/riophae/vue-treeselect.svg?style=social&label=Star")
      div.container
        section#main
          div#sidebar
            include ./partials/sidebar
          div#content
            include ./partials/introduction
            include ./partials/getting-started
            include ./partials/guides
            include ./partials/api
      footer.site-footer
        div.container
          | Copyright &copy; 2017-2018 <a href="https://github.com/riophae">Riophae Lee</a>. MIT Licensed.
    script(src="static/prism.min.js")

